pipeline {
    agent any

    tools {
        jdk 'JDK 11' // Make sure this matches a configured JDK in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Adithya02-alt/demotest.git'
            }
        }

        stage('Compile') {
            steps {
                sh 'javac *.java'
            }
        }

        stage('Run') {
            steps {
                sh 'java Hello' 
            }
        }
    }

    post {
        success {
            echo 'Java program compiled and ran successfully!'
        }
        failure {
            echo 'Something went wrong during compile or run.'
        }
    }
}
