pipeline {
    agent any

    tools {
        jdk 'JDK 21'         
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Adithya02-alt/demotest.git'
            }
        }

        stage('Compile') {
            steps {
                sh ' clean compile'
            }
        }

        stage('Test') {
            steps {
                sh 'test'
            }
        }

        
    post {
        success {
            echo 'Build and tests succeeded!'
        }
        failure {
            echo 'Build or tests failed.'
        }
    }
}
